            "makefilePath": "${workspaceFolder}/Makefile",
            "buildArgs": [],
            "cleanArgs": [],
            "buildTarget": "all",
            "cleanTarget": "clean"
        },
        {
            "name": "Release",
            "buildDirectory": "${workspaceFolder}/build/release",
            "makefilePath": "${workspaceFolder}/Makefile",
